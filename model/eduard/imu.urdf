<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="imu" params="name parent_link topic_name visualize:=false *origin">
    <xacro:include filename="$(find edu_simulation)/model/eduard/inertial.urdf"/>

    <xacro:property name="size" value="0.05"/>

    <link name="${name}_link">
      <visual>
        <geometry>
          <box size="${size} ${size} ${size}"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <box size="${size} ${size} ${size}"/>
        </geometry>
      </collision>
      <xacro:inertial_block mass="0.3" width="${size}" length="${size}" height="${size}"/>
    </link>

    <joint name="${name}_joint" type="continuous">
      <xacro:insert_block name="origin"/>
      <parent link="${parent_link}"/>
      <child link="${name}_link"/>
    </joint>

    <gazebo reference="${name}_link">
      <sensor name="${name}_sensor" type="imu">
        <topic>${topic_name}</topic>
        <update_rate>10</update_rate>
        <always_on>true</always_on>
        <visualize>${visualize}</visualize>
      </sensor>
    </gazebo>

  </xacro:macro>
</robot>
